extends layout

block content
    div.whole.align-center
        p.moduleId Module ID:
            span= moduleId
    div.whole.align-center
        p.moduleTime Module clock:
            span(data-unixtime=serverTime)
            span.status In sync with your device
    div.whole
        a(href='/downloadPackages') Download data
    div.whole
        a(href='/hardwareStatus') Hardware status
    div.whole.align-center
        button#closeSession Close session